<%- include('../partials/header') %>

<div class="container">
  <h2 class="custom-h2">Event Details</h2>

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <form>

        <div class="form-group">
          <label>Event Name:</label>
          <input disabled type="text" name="eventName" class="form-control col-sm-8" value="<%=event.eventName%>" />
        </div>

        <div class="form-group">
          <label>Busker Name:</label>
          <input disabled type="text" name="buskerName" class="form-control col-sm-8" value="<%=event.buskerProfile.buskerName%>" />
        </div>

        <div class="form-group">
          <label>Location:</label>
          <input disabled type="text" name="location" class="form-control col-sm-8" value="<%=event.location%>" />
        </div>

        <div class="form-group">
          <label>Date:</label>
          <input disabled type="text" name="eventDate" class="form-control col-sm-8" value="<%= dayjs(event.eventDate).format('DD-MMM-YYYY') %>" />
        </div>

        <div class="form-group">
          <label>Event Description:</label>
          <input disabled type="text" name="eventDescription" class="form-control col-sm-8" value="<%=event.eventDescription%>" />
        </div>

      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>