<%- include('../partials/header') %>

<h2>Upcoming Events</h2>
<table border="1">
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Busker Name</th>
      <th>Location</th>
      <th>Event Details</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <!-- Write the line of EJS to iterate over movies using forEach -->
    <% events.forEach(e => { %>
    <tr>
      <td><%= e.eventName %></a>
      <td><%= e.buskerName %></td>
      <td><%= e.location %></td>
      <td><%= e.eventDetails %></td>
      <td>
        <form action="/events/<%=e.id%>?_method=DELETE" method="post">
          <button>Delete</button>
        </form>
        <form action="/events/<%= e.id%>/edit" method="get">
          <button>Edit</button>
        </form>
      </td>

    </tr>
    <!-- Close the forEach using EJS here -->
    <% }) %>
  </tbody>
</table>



<%- include('../partials/footer') %>