<%- include('../partials/header') %>


<h2>Create New Event</h2>
<form action="/events/new" method="get">
  <button>Click to Add Event</button>
</form>


<h2>Edit Events</h2>
<table border="1">
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Busker Name</th>
      <th>Location</th>
      <th>Date</th>
      <th>Event Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% event.forEach(e => { %>
    <tr>
      <td><%= e.eventName %></a>
      <td><%= e.buskerName %></td>
      <td><%= e.location %></td>
      <td><%= dayjs(e.eventDate).format("DD-MMM-YYYY") %></td>
      <td><%= e.eventDescription %></td>
      <td>
        <form action="/events/<%=e.id%>?_method=DELETE" method="post">
          <button>Delete</button>
        </form>
        <form action="/events/<%= e.id%>/edit" method="get">
          <button>Edit</button>
        </form>
      </td>

    </tr>

    <% }) %>
  </tbody>
</table>



<%- include('../partials/footer') %>