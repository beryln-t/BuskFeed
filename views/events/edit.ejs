<%- include('../partials/header') %>
<h2>Edit Event</h2>
<form action="/events/<%=id%>?_method=PUT" method="POST">
  <label>Event Name:</label>
  <input type="text" name="eventName" value="<%=event.eventName%>" required /><br />

  <label>Busker Name:</label>
  <input type="text" name="buskerName" value="<%=event.buskerName%>" required /><br />

  <label>Date:</label>
  <input type="date" name="eventDate" value="<%= dayjs(event.eventDate).format('YYYY-MM-DD') %>" required /><br />

  <label>Location:</label>
  <input type=" text" name="location" value="<%=event.location%>" required /><br />

  <label>Event Description</label>
  <input type="text" name="eventDescription" value="<%=event.eventDescription%>" required /> <br />

  <button type="submit">Save</button>
  <button type="reset">Cancel</button>
</form>

<%- include('../partials/footer') %>