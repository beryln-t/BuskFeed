<%- include('../partials/header') %>
<h2>Create Profile</h2>
<form action="/buskers" method="POST">

  <label>Busker Name</label>
  <input type="text" name="buskerName" required /><br />

  <label>Busking Act:</label>
  <input type="text" name="buskingAct" required /><br />

  <label>LOE Number:</label>
  <input type="text" name="loeNumber" required pattern="^[a-zA-Z0-9]{8}$" oninvalid="this.setCustomValidity('Please enter a valid 8-character alphanumeric LOE number.')" oninput="this.setCustomValidity('')" title="Please enter a valid 8-character alphanumeric LOE number." /><br />

  <label>Valid From:</label>
  <input type="date" name="validFrom" required /><br />

  <label>Valid To:</label>
  <input type="date" name="validTo" required /><br />

  <button type="submit">Save</button>
  <button type="reset">Cancel</button> <br />

</form>
<%- include('../partials/footer') %>